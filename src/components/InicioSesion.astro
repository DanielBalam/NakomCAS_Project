---
const radioBase = "px-4 py-2 rounded-lg cursor-pointer transition-colors duration-200";
const radioIdle = "bg-gray-100 text-gray-700 hover:bg-gray-200";
const radioSelected = "bg-orange-500 text-white";
---

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">Accede a tu cuenta</h2>
    <form action="/api/iniciar-sesion" method="POST" class="space-y-6">
        <div>
            <label
                for="email"
                class="block mb-2 text-sm font-medium text-gray-600"
                >Correo Electrónico</label
            >
            <input
                type="email"
                id="email"
                name="email"
                placeholder="correo@ejemplo.com"
                class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg focus:ring-2 focus:ring-orange-500 focus:bg-white"
                required
            />
        </div>
        <div>
            <label
                for="password"
                class="block mb-2 text-sm font-medium text-gray-600"
                >Contraseña</label
            >
            <input
                type="password"
                id="password"
                name="password"
                placeholder="Contraseña"
                class="w-full px-4 py-3 bg-gray-100 border-0 rounded-lg focus:ring-2 focus:ring-orange-500 focus:bg-white"
                required
            />
        </div>
        <button
            type="submit"
            class="w-full bg-orange-500 text-white px-4 py-3 rounded-lg font-semibold hover:bg-orange-600 transition-colors duration-200"
            >Iniciar Sesión</button
        >
        <div>
            <label>
                ¿No tienes una cuenta?
                <a href="/Signup" class="text-orange-500 hover:underline">Crear una cuenta</a>
            </label>
        </div>
    </form>
</div>

    