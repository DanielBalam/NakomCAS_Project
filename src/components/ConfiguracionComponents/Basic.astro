      placeholder="Escribe tu comentario..."></textarea>
    <div class="mt-3">
      <button id="btnEnviar" class="px-4 py-2 bg-blue-600 text-white rounded-lg">Enviar</button>
    </div>
  </div>
</div>

<script is:raw>
  (function () {
    const btn = /** @type {HTMLButtonElement | null} */ (document.getElementById("btnEnviar"));
    if (!btn) return;

    btn.addEventListener("click", async () => {
      const colorEl = /** @type {HTMLSelectElement | null} */ (document.getElementById("color"));
      const sizeEl = /** @type {HTMLSelectElement | null} */ (document.getElementById("size"));
      const connectivityEl = /** @type {HTMLSelectElement | null} */ (document.getElementById("connectivity"));
      const textareaEl = /** @type {HTMLTextAreaElement | null} */ (document.querySelector("textarea"));

      const almacenamiento = colorEl?.value ?? "";
      const tamanio = sizeEl?.value ?? "";
      const conectividad = connectivityEl?.value ?? "";
      const comentario = textareaEl?.value ?? "";

      const data = { almacenamiento, size, connectivity, comentario };

      try {
        const response = await fetch("https://swapi.dev/api/people/1", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });
        const result = await response.json();
        console.log("Respuesta de la API:", result);
        alert("Datos enviados correctamente (simulado) ✅");
      } catch (error) {
        console.error("Error al conectar con la API:", error);
        alert("Error al enviar los datos ❌");
      }
    });
  })();
</script>

